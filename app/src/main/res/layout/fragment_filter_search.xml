<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.FilterSearchFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/et_searchbyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text"
        android:padding="8dp"
        app:titleTextColor="@color/black"
        android:hint="Search By Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6">

    </EditText>
    <EditText
        android:id="@+id/et_jobstarRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text"
        android:padding="8dp"
        app:titleTextColor="@color/black"
        android:hint="Search By Job Star Rating"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_searchbyName"
        app:layout_constraintWidth_percent="0.6">

    </EditText>
    <EditText
        android:id="@+id/et_searchbyAutisumLvl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text"
        android:padding="8dp"
        app:titleTextColor="@color/black"
        android:hint="Search by AutismLvl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_jobstarRating"
        app:layout_constraintWidth_percent="0.6">

    </EditText>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_searchbyAutisumLvl"
        app:layout_constraintLeft_toLeftOf="@id/et_searchbyAutisumLvl"
        android:text="Filter"
        android:id="@+id/btn_filter"
        android:layout_marginTop="24dp">

    </com.google.android.material.button.MaterialButton>
</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>