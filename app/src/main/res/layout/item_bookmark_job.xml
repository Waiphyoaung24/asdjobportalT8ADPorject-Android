<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_remove"
                android:layout_below="@id/view1">

                <ImageView
                    android:id="@+id/ImageTrash"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/view1"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/filled_trash1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/ImageTrash"
                    android:text="Remove"
                    android:fontFamily="@font/rubik"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_regular_2x" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:id="@+id/view_buynow"
                android:layout_toRightOf="@id/view2">

                <ImageView
                    android:id="@+id/BuyNow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/view1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@id/view2"
                    android:src="@drawable/ic_baseline_article_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/BuyNow"
                    android:text="View Job"
                    android:fontFamily="@font/rubik"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_regular_2x" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_job_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_job_title"
                android:layout_below="@id/tv_job_title"
                android:layout_marginTop="8dp"
                android:text="ABC Company"

                android:fontFamily="@font/rubik"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_regular_2x" />

            <TextView
                android:id="@+id/tv_job_datebookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_job_company"
                android:layout_below="@id/tv_job_company"
                android:text="Bookmark Date -"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_small" />




            <TextView
                android:id="@+id/tv_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ivProductImage"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@id/ivProductImage"
                android:text="Android Developer"
                android:fontFamily="@font/font"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_heading_1x" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_job_datebookmark"
                android:layout_marginTop="20dp"
                android:background="@color/divider" />


            <View
                android:id="@+id/view2"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_below="@id/view1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/divider" />



                <ImageView
                    android:layout_margin="12dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ivProductImage"
                    android:background="@drawable/circle"
                    android:scaleType="centerCrop"
                    android:src="@drawable/company_logo" />



        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>